extends ../../layouts/default.pug
block main 
    h2 Trang thông tin cá nhân
    if(user.avatar)
        img(src=user.avatar width="150px" class="mb-3" alt = "Ảnh")
    if(user.fullname)
        p Họ tên: <b>#{user.fullname}</b>
    if(user.email)
        p Email: <b>#{user.email}</b>
    if(user.phone)
        p Điện thoại: <b>#{user.phone}</b>
    p 
        span Trạng thái 
        span 
            <b>#{user.status==="active" ? "Hoạt động" : "Dừng hoạt động"}</b>
    if(role.title)
        p Nhóm quyền: <b>#{role.title}</b>
    a(href = "/admin/my-account/edit" class = "btn btn-success btn-sm") Chỉnh sửa thông tin