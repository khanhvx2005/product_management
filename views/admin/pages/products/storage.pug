extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert_success("3000")
    h1 Trang thùng rác
    div(class="card mb-3")
        div(class="card-header") Danh sách sản phẩm
        div(class="card-body" style = {padding:"0px"})
            table(class = "table table-hover" table-storage)
                thead
                    tr
                         
                        th STT 
                        th Tiêu đề
                        th Hình ảnh
                        th Giá
                        th Trạng thái 
                        th Hành động
                tbody
                    each item , index in products
                        tr  
                              
                            td #{index + 1}
                            td #{item.title}
                            td 
                                img(src = item.thumbnail alt = item.title)
                            td #{item.price}
                            td
                                if(item.status == "active") 
                                    a(class = "badge badge-success" href = "javascript:;" data-id = item.id data-status = item.status button-status) Hoạt động
                                else 
                                    a(class = "badge badge-danger" href = "javascript:;" data-id = item.id data-status = item.status button-status) Dừng hoạt động
                            td
                                button(type="button" class="btn btn-success ml-1 btn-sm" storage-restore = "restore" data-id = item.id ) Khôi phục
                                button(type="button" class="btn btn-success ml-1 btn-sm" storage-delete = "delete" data-id = item.id ) Xóa vĩnh viễn

    form(action = ""
        method = "POST"
        path = "/admin/products/storage"
        form-storage
        )