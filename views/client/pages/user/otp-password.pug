extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main 
    +alert_success("5000")
    +alert_error("5000")


    .container.my-5 
        .row.justify-content-center
            .col-8 
                h3 Nhập mã OTP
                form(
                    action = "/user/password/otp"
                    method = "POST"
                )
                    
                    div(class="form-group")
                        label(for="email") Email
                        input(class="form-control" type = "text" id = "email" name = "email" value =email readonly) 
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(class="form-control" type = "text" id = "otp" name = "otp"  required) 
                    
                    div(class="form-group")
                        button(type = "submit" class = "btn btn-primary btn-block") Xác nhận