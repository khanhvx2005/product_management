include ../mixins/sub-menu.pug
header(class="header")
    div(class="container")
        div(class = "row")
            div(class="col-3")
                div(class="inner-logo")
                    img(src = "/client/images/cellphoneS_logo-1024x341.png" alt = "" width = "200px" height = "auto")
            div(class="col-5")
                form(action = "/search" method = "GET")
                    div(class="input-group ")
                        input(class="form-control" type = "text" name = "keyword" value = keyword)
                        button(type = "submit" class = "btn btn-primary btn-sm") Tìm kiếm
            div(class="col-4")
                div(class="inner-menu")
                    ul 
                        li 
                            a(href = "/") Trang chủ
                        li(class="sub-menu") 
                            - const pathProducts = "/products"
                            a(href = pathProducts) Sản phẩm
                            +sub-menu(layoutProductsCategory,pathProducts)
                        li 
                            
                            a(href = "/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0 })
                            

                            